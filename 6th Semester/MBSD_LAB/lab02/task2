#include <msp430.h>

int main(void)
{
    WDTCTL = WDTPW | WDTHOLD;   // Stop watchdog timer
    PM5CTL0 &= ~LOCKLPM5;       // Unlock GPIO

    P1DIR |= (BIT0 | BIT7);  // Set P1.0 and P1.7 as outputs

    while (1)
    {
        P1OUT ^= BIT0;  // Toggle P1.0
        __delay_cycles(100000);  

        P1OUT ^= BIT7;  // Toggle P1.7
        __delay_cycles(200000);
    }
}